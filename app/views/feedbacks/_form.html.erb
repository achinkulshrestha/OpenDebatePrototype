<div class="generic-form">
<%= form_for(@feedback) do |f| %>
  <% if @feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
      <% @feedback.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :debate_id, {:value => 1} %>
  </div>
  <div class="field">
    <%= f.hidden_field :rated_id, {:value => current_user.id} %>
  </div>
  <div class="field">
    <%= f.hidden_field :rator_id, {:value => current_user.id} %>
  </div>
  <div class="field">
    <%= f.label :explain %><br>
    <%= f.select :explain, (1..10).step(1).to_a.map{|s| ["#{s}", s]}, {prompt: "Rate Explanation"}, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :listen %><br>
    <%= f.select :listen, (1..10).step(1).to_a.map{|s| ["#{s}", s]}, {prompt: "Rate Listening"}, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :interest %><br>
    <%= f.select :interest, (1..10).step(1).to_a.map{|s| ["#{s}", s]}, {prompt: "Rate Interest"}, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :comments %><br>
    <%= f.text_area :comments %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
