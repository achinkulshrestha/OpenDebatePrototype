<p id="notice"><%= notice %></p>

<h1>Listing Debates</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Length</th>
      <th>Topic</th>
      <th>Completed</th>
      <th>Initiator</th>
      <th>Joiner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @debates.each do |debate| %>
      <tr>
        <td><%= debate.date %></td>
        <td><%= debate.length %></td>
        <td><%= debate.topic %></td>
        <td><%= debate.completed %></td>
        <td><%= debate.initiator_id %></td>
        <td><%= debate.joiner_id %></td>
        <td><%= link_to 'Show', debate %></td>
        <td><%= link_to 'Edit', edit_debate_path(debate) %></td>
        <td><%= link_to 'Destroy', debate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

