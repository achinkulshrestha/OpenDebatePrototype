<h1>Pending Requests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Profile</th>
      <th>Accept?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pending_requests.each do |user| %>
      <tr>
        <td><%= user.profile.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Profile', profiles_path(id: user.id) %></td>
        <td><%= link_to 'Accept Request', friend_request_accept_path(id: user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

